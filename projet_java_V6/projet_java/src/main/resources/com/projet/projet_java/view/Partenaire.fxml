<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" prefWidth="800" prefHeight="600">

    <!-- TOP - Boutons à droite -->
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10" BorderPane.alignment="TOP_RIGHT">
            <children>
                <Button text="Bon d'achat" />
                <Button text="Accueil" />
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </top>

    <!-- CENTER - Titre + grille des commerces -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Label text="Nos Commerces partenaires :" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <GridPane hgap="20" vgap="20" alignment="CENTER">
                    <children>
                        <!-- Première ligne -->
                        <Label text="Image 1" GridPane.rowIndex="0" GridPane.columnIndex="0"
                               style="-fx-border-color: black; -fx-padding: 40 60; -fx-border-radius: 10;" />
                        <Label text="Image 2" GridPane.rowIndex="0" GridPane.columnIndex="1"
                               style="-fx-border-color: black; -fx-padding: 40 60; -fx-border-radius: 10;" />
                        <Label text="Image 3" GridPane.rowIndex="0" GridPane.columnIndex="2"
                               style="-fx-border-color: black; -fx-padding: 40 60; -fx-border-radius: 10;" />

                        <!-- Deuxième ligne -->
                        <Label text="Image 4" GridPane.rowIndex="1" GridPane.columnIndex="0"
                               style="-fx-border-color: black; -fx-padding: 40 60; -fx-border-radius: 10;" />
                        <Label text="Image 5" GridPane.rowIndex="1" GridPane.columnIndex="1"
                               style="-fx-border-color: black; -fx-padding: 40 60; -fx-border-radius: 10;" />
                        <Label text="Image 6" GridPane.rowIndex="1" GridPane.columnIndex="2"
                               style="-fx-border-color: black; -fx-padding: 40 60; -fx-border-radius: 10;" />
                    </children>
                </GridPane>
            </children>
        </VBox>
    </center>

</BorderPane>
