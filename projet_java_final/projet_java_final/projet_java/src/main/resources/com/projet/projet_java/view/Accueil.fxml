<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<!--
    Page d'accueil principale de l'application.
    ➔ Permet à l'utilisateur de se connecter ou de s'inscrire.
    ➔ Contrôleur associé : AccueilController
-->
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.projet.projet_java.controller.AccueilController"
            prefHeight="400.0" prefWidth="600.0">
    <children>

        <!-- Texte de bienvenue -->
        <Text layoutX="230.0" layoutY="100.0" text="Bienvenue sur l'application !" />

        <!-- Bouton de connexion vers la page de connexion -->
        <Button fx:id="boutonConnexion" layoutX="250.0" layoutY="150.0" text="Se connecter" onAction="#handleConnexion" />

        <!-- Bouton d'inscription vers la page d'inscription -->
        <Button fx:id="boutonInscription" layoutX="250.0" layoutY="200.0" text="S'inscrire" onAction="#handleInscription" />

    </children>
</AnchorPane>
